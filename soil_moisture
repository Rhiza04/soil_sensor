#include <WiFi.h>                 // wifi & firebase setup
#include <Firebase_ESP_Client.h>
#include "addons/TokenHelper.h"
#include "addons/RTDBHelper.h"

#include <Adafruit_Sensor.h> // dht 11 setup
#include <DHT.h>
#include <DHT_U.h>
#define DHTPIN 4         // dht 11 on pin 4
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

#define WIFI_SSID "3RTV"
#define WIFI_PASSWORD "vv110668"
#define API_KEY "AIzaSyAuxXEBQKiWP9zLghXtqCZaYZl94KbhfOw" 
#define DATABASE_URL "https://rhiza-project-default-rtdb.asia-southeast1.firebasedatabase.app/"

FirebaseData fbdo;
FirebaseAuth auth;
FirebaseConfig config;

unsigned long sendDataPrevMillis = 0;
bool signupOK = false;

const int soilMoisturePin = 32; // Soil sensor on pin 32
const int dryValue = 4095;       
const int wetValue = 1500;       

// inisialisasi LDR sensor
const int ldrPin = 34;         // Gunakan pin ADC1 (misalnya GPIO 34)
const float Vcc = 3.3;         // Tegangan referensi ESP32
const float R = 10000.0;       // Nilai resistor tetap (10k ohm)

void setup() {
  Serial.begin(115200);

  analogReadResolution(12);    // Resolusi ADC 12-bit (0 - 4095) untuk LDR sensor

  WiFi.begin(WIFI_SSID, WIFI_PASSWORD);
  Serial.print("Connecting to WiFi");
  while (WiFi.status() != WL_CONNECTED){
    Serial.print(".");
    delay(300);
  }
  Serial.println();
  Serial.print("Connected, IP: ");
  Serial.println(WiFi.localIP());
  Serial.println();

  config.api_key = API_KEY;
  config.database_url = DATABASE_URL;

  if (Firebase.signUp(&config, &auth, "", "")){
    Serial.println("signUp Ok");
    signupOK = true;
  } else {
    Serial.printf("%s\n", config.signer.signupError.message.c_str());
  }

  config.token_status_callback = tokenStatusCallback;
  Firebase.begin(&config, &auth);
  Firebase.reconnectWiFi(true);

  dht.begin(); // begin dht 11 read
}

void loop() {
  // LDR sensor
  int rawADC = analogRead(ldrPin);                 // Baca nilai ADC
  float voltage = (rawADC / 4095.0) * Vcc;         // Konversi ke tegangan

  // Hitung resistansi LDR berdasarkan pembagi tegangan
  float RLDR = (R * (Vcc - voltage)) / voltage;  

  // Hitung lux dengan pendekatan empiris (disesuaikan jenis LDR)
  float lux = 500 / pow(RLDR / 1000.0, 1.4);       

  if (Firebase.ready() && signupOK && (millis() - sendDataPrevMillis > 5000 || sendDataPrevMillis == 0)){
    sendDataPrevMillis = millis();
    int sensorValue = analogRead(34);
    int moisturePercent = ((dryValue - sensorValue) * 100) / (dryValue - wetValue);

    float temperature = dht.readTemperature();
    float humidity = dht.readHumidity();

    if (Firebase.RTDB.setInt(&fbdo, "Sensor/raw_soil_sensor_data", sensorValue)){
      Serial.println();
      Serial.print(sensorValue);
    } else {
      Serial.println("FAILED: " + fbdo.errorReason());
    }

    if (Firebase.RTDB.setInt(&fbdo, "Sensor/percent_soil_sensor_data", moisturePercent)){
      Serial.println();
      Serial.print(moisturePercent);
      Serial.print(" - successfully saved to: " + fbdo.dataPath());
      Serial.println(" (" + fbdo.dataType() + ")");
    } else {
      Serial.println("FAILED: " + fbdo.errorReason());
    }

    if (Firebase.RTDB.setInt(&fbdo, "Sensor/humidity", humidity)){
      Serial.println();
      Serial.print(humidity);
    } else {
      Serial.println("FAILED: " + fbdo.errorReason());
    }

    if (Firebase.RTDB.setInt(&fbdo, "Sensor/temperature", temperature)){
      Serial.println();
      Serial.print(temperature);
    } else {
      Serial.println("FAILED: " + fbdo.errorReason());
    }

    if (Firebase.RTDB.setInt(&fbdo, "Sensor/light_intensity", lux)){
      Serial.println();
      Serial.print(lux);
    } else {
      Serial.println("FAILED: " + fbdo.errorReason());
    }
  }
}
